<%= javascript_include_tag "/javascripts/prototype" %>
<%= javascript_include_tag '/javascripts/jquery' %>
<%= stylesheet_link_tag '/stylesheets/extra_buttons' %>
<style>

    .tt_controls_start_month .keyboard{display:none;}
    #tt_page_start_month .options{height:515px;}
    #tt_page_start_month .options li{font-size:30px;}

    .tt_controls_end_month .keyboard{display:none;}
    #tt_page_end_month .options{height:515px;}
    #tt_page_end_month .options li{font-size:30px;}

    #tt_page_select_age_group_s .options{height:515px;}

    .tt_controls_start_day #Unknown { display:none; }
    .tt_controls_end_day #Unknown { display:none; }

</style>
<script>

    var tt_cancel_destination = "/clinic"
</script>

<% if params[:type] == "missed" %>
<form action="/report/missed_appointment_report" method='post' >
  <% elsif params[:type] == 'disaggregated' %>
  <form action="/cohort_tool/disaggregated_cohort" method='post' >
    <input type="hidden" name="date_parameters" value="radom_date_parameters"/>
  <% else %>
  <form action="/report/defaulted_patients_report" method='post' >
  <% end %>
  <% month_names = month_name_options.gsub('<option value="Unknown">Unknown</option>', '').html_safe %>

<% if params[:type] == "missed" or params[:type] == 'disaggregated'%>


  <%= text_field_tag "start_year", nil,
                     {:helpText => 'Start Year',
                      :field_type => 'number',
                      :absoluteMin => "1890",
                      :min => "1940",
                      :absoluteMax => Date.today.year,
                      :tt_pageStyleClass => "Numeric NumbersOnly",
                      :validationJS => "setDOB();" }  %>

  <%= select_tag "start_month", month_names,
                 {:helpText => 'Start Month',
                  :validationJS => "validateDOB();",
                  :validationMessage => 'Please enter a valid date',
                  :tt_onLoad => "__$('keyboard').style.display = 'none'"}%>

  <%= text_field_tag "start_day",  nil,
                     :field_type => 'number',
                     :helpText => "Start Day" ,
                     :validationJS => "validateDOB()",
                     :validationMessage => 'Please enter a valid date'%>
<% end %>

<%= (select_tag "default_volume",options_for_select(["","All","Date Range"]),
                {:helpText=>"Defualters As:",
                 :validationMessage => 'You must select value from list'
                })if params[:type] == "defaulter"
%>
<%= text_field_tag "start_year",nil,
                   {:helpText=>"Start Year",
                   :field_type=>"number",
                   :absoluteMin=>"1890",
                   :min=>"1999",
                    :absoluteMax => Date.today.year,
                    :tt_pageStyleClass => "Numeric NumbersOnly",
                    :condition => '$("default_volume").value == "Date Range"'
                   }%>

  <%= text_field_tag "end_year", nil,
                     {:helpText => 'End Year',
                      :field_type => 'number',
                      :absoluteMin => "1890",
                      :min => "1940",
                      :absoluteMax => Date.today.year,
                      :tt_pageStyleClass => "Numeric NumbersOnly",
                      :validationJS => "setDOB();" }  %>

  <%= select_tag "end_month", month_names,
                 {:helpText => 'End Month',
                  :validationJS => "validateDOB();",
                  :validationMessage => 'Please enter a valid date',
                  :tt_onLoad => "__$('keyboard').style.display = 'none'"}%>

  <%= text_field_tag "end_day",  nil,
                     :field_type => 'number',
                     :helpText => "End Day" ,
                     :validationJS => "validateDOB()",
                     :validationMessage => 'Please enter a valid date'%>

</form>

